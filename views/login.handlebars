  <link rel="shortcut icon" href="/assets/img/pokeball-icon-svg.svg" />
  <link rel="stylesheet" type="text/css" href="/assets/loginStyles.css" />
</head>

<body>
  <nav class="vertical-nav">
    <a href="/login" id="logoLink">
      <img id="logo" src="/assets/img/league-logo.png" alt="league logo" />
